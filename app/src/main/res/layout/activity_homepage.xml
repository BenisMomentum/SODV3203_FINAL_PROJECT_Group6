<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/icon_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/_null"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="102dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/group"
                tools:ignore="ContentDescription,HardcodedText" />

            <LinearLayout
                android:id="@+id/home_BigStep_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_corner_bg"
                android:backgroundTint="@color/homePage_titleBGColor"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_TV_Big"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/_null"
                    android:text="@string/big_text"
                    android:textColor="@color/YellowSecondary"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/home_TV_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/_null"
                    android:text="@string/step_text"
                    android:textColor="@color/GreenSecondary"
                    android:textSize="34sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/welcome_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/welcome_title"
                style="@style/Widget.BigStepTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="@string/welcome_back"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subTitle_homePage"
                style="@style/Widget.BigStepTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Subttitle"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/usersBtns_homePage"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Widget.BigStepTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/create_workout"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/home_ibtn_createWorkout"
                    style="@style/Widget.BigStepTheme.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/home_ibtn_createWorkout_desc"
                    app:srcCompat="@drawable/bot_video_add" />

                <TextView
                    style="@style/Widget.BigStepTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/workout_routine"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/home_ibtn_workout"
                    style="@style/Widget.BigStepTheme.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/home_ibtn_workout_desc"
                    app:srcCompat="@drawable/homebar_workout_icon" />

                <TextView
                    style="@style/Widget.BigStepTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/search_homepage"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/home_ibtn_search"
                    style="@style/Widget.BigStepTheme.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/home_ibtn_search_desc"
                    app:srcCompat="@drawable/homebar_search_icon" />

                <TextView
                    style="@style/Widget.BigStepTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_TV_settingsTitle"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/home_ibtn_settings"
                    style="@style/Widget.BigStepTheme.ImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/home_ibtn_settings_desc"
                    app:srcCompat="@drawable/homebar_settings_icon" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>