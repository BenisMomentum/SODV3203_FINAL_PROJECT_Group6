<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
        >

    <LinearLayout
        android:id="@+id/Workout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/container_goBack"
            android:layout_width="133dp"
            android:layout_height="72dp"
            android:backgroundTint="@color/BackgroundColor"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_add"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/BackgroundColor"
                app:srcCompat="@drawable/arrow" />

            <TextView
                android:id="@+id/label_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back"
                android:textColor="@color/TextColor"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/welcome_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome_txt"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:gravity="center"
                android:text="Welcome"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text="Your journey to a stronger, healthier you starts now. Letâ€™s take that big step together! "
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/WorkoutLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workout_title"
                tools:ignore="RtlSymmetry,TextSizeCheck"
                android:layout_width="244dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="20sp"
                android:text="@string/workout_label"
                android:textAlignment="viewStart"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btns_weekday_container"
                style="?android:attr/buttonBarStyle"
                tools:ignore="DuplicateIds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_Sunday"
                    style="?android:attr/buttonBarButtonStyle"
                    tools:ignore="DuplicateIds,NestedWeights,DuplicateSpeakableTextCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/YellowSecondary"
                    android:text="@string/sunday"
                    android:textColor="@color/TextColor" />

                <Button
                    android:id="@+id/btn_Monday"
                    style="?android:attr/buttonBarButtonStyle"
                    tools:ignore="DuplicateIds,DuplicateSpeakableTextCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/YellowSecondary"
                    android:text="@string/monday"
                    android:textColor="@color/TextColor" />

                <Button
                    android:id="@+id/btn_Tuesday"
                    style="?android:attr/buttonBarButtonStyle"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/YellowSecondary"
                    android:text="@string/tuesday"
                    android:textColor="@color/TextColor" />

                <Button
                    android:id="@+id/btn_Wednesday"
                    style="?android:attr/buttonBarButtonStyle"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/YellowSecondary"
                    android:text="@string/wednesday"
                    android:textColor="@color/TextColor" />

                <Button
                    android:id="@+id/btn_thursday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/YellowSecondary"
                    android:text="@string/thursday"
                    android:textColor="@color/TextColor" />

                <Button
                    android:id="@+id/btn_friday"
                    style="?android:attr/buttonBarButtonStyle"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/YellowSecondary"
                    android:text="@string/friday"
                    android:textColor="@color/TextColor" />

                <Button
                    android:id="@+id/btn_sunday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/YellowSecondary"
                    android:text="@string/saturday"
                    android:textColor="@color/TextColor" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="185dp"
            android:orientation="horizontal"
            android:textAlignment="center">

            <ImageButton
                android:id="@+id/imageButton3"
                tools:ignore="ContentDescription,ImageContrastCheck,InefficientWeight,SpeakableTextPresentCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/BackgroundColor"
                app:srcCompat="@drawable/bot_video_add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txt_add_workout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Add a New Workout"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>