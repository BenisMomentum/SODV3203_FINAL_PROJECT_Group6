<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BigStepTheme" parent="Theme.AppCompat.DayNight.NoActionBar">


        <item name="colorPrimary">@color/my_light_on_primary</item>
        <item name="colorSecondary">@color/GreenSecondary</item>
        <item name="android:background">@color/BackgroundColor</item>
        <item name="android:textColorPrimary">@color/TextColor</item>

        <item name="android:buttonStyle">@style/Widget.BigStepTheme.Button</item>
    </style>

    <style name="Widget.BigStepTheme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">


        <item name="android:background">@drawable/round_corner_bg</item>
        <item name="android:backgroundTint">@color/buttonBGColor</item>

        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:radius">10dp</item>

    </style>

    <style name="Widget.BigStepTheme.ImageButton" parent ="Widget.AppCompat.ImageButton">

        <item name="android:backgroundTint">@color/iconBGColor</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="Widget.BigStepTheme.TextView" parent="Widget.AppCompat.TextView">

        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="Widget.BigStepTheme.Switch" parent="Widget.AppCompat.CompoundButton.Switch">

        <item name="android:textColor">@color/TextColor</item>

    </style>

    <style name="Widget.BigStepTheme.EditText" parent="Widget.AppCompat.EditText">

        <item name="android:background">@drawable/round_corner_bg</item>
        <item name="android:backgroundTint">@color/white</item>

        <item name="android:textColorHint">@color/editTextHintColor</item>
        <item name="android:ems">10</item>
        <item name="android:padding">12dp</item>

        <item name="android:textColor">@color/black</item>

    </style>

<!--    Workout Routine edit and creation   -->

    <style name="BigStepTheme.Routine"/>

<!--    ECC = Edit Creation Container-->
    <style name="BigStepTheme.Routine.ECC">

        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">15dp</item>

        <item name="android:background">@drawable/round_corner_bg</item>
        <item name="android:backgroundTint">@color/GreenSecondary</item>

    </style>


<!--  WorkoutSearchResult package  -->
    <style name="BigStepTheme.WorkoutSearchResult"/>
    <style name="BigStepTheme.WorkoutSearchResult.Container">

        <item name="android:background">@drawable/round_corner_bg</item>
        <item name="android:backgroundTint">@color/workoutResultBGColor</item>

        <item name="android:textColor">@color/workoutResultTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>

        <item name="android:padding">14dp</item>

    </style>

    <style name="BigStepTheme.WorkoutDisplay"/>
    <style name="BigStepTheme.WorkoutDisplay.Container">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">16dp</item>

        <item name="android:background">@drawable/round_corner_bg</item>
        <item name="android:backgroundTint">@color/workoutResultBGColor</item>

    </style>

    <style name="Widget.BigStepTheme.WorkoutDisplay.Container.TextView" parent="Widget.BigStepTheme.TextView">

        <item name="android:textColor">@color/workoutResultTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">10dp</item>

    </style>

    <style name="BigStepTheme.WorkoutDisplay.DaysContainer"/>

    <style name="Widget.BigStepTheme.WorkoutDisplay.Container.Day" parent="Widget.BigStepTheme.TextView">

        <item name="android:background">@drawable/round_corner_bg</item>

    <!--Default is false-->

        <item name="android:backgroundTint">@color/workoutResult_dateDisplay_BG_false</item>
        <item name="android:textColor">@color/workoutResult_dateDisplay_Text_false</item>

        <item name="android:gravity">center</item>


        <item name="android:layout_margin">2dp</item>

    </style>

    <style name="Widget.BigStepTheme.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">16sp</item>

        <item name="android:padding">4dp</item>

        <item name="android:minHeight">@dimen/checkBox_minHeight</item>
        <item name="android:minWidth">@dimen/checkBox_minHeight</item>

    </style>

</resources>