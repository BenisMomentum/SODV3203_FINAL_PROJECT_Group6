<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/BigStepTheme.WorkoutDisplay.Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/_null"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RLWMD_workoutTitle"
                style="@style/Widget.BigStepTheme.WorkoutDisplay.Container.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/RLWD_workoutTitle_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/_null"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/_null"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/RLWMD_ibtn_incSet"
                    android:layout_width="@dimen/generic_minHeight"
                    android:layout_height="@dimen/generic_minHeight"
                    android:layout_weight="1"
                    android:background="@color/workoutResultBGColor"
                    android:contentDescription="@string/RLWMD_incSetBtn_speakText"
                    app:srcCompat="@drawable/bot_video_add" />

                <TextView
                    android:id="@+id/RLWMD_TV_sets"
                    style="@style/Widget.BigStepTheme.WorkoutDisplay.Container.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RLWMD_setsTitle_defaultText"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/RLWMD_ibtn_decSet"
                    android:layout_width="@dimen/generic_minHeight"
                    android:layout_height="@dimen/generic_minHeight"
                    android:layout_weight="1"
                    android:background="@color/workoutResultBGColor"
                    android:contentDescription="@string/RLWMD_decSetBtn_speakText"
                    app:srcCompat="@drawable/ibtn_decrement_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@color/_null"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/RLWMD_TV_reps"
                    style="@style/Widget.BigStepTheme.WorkoutDisplay.Container.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RLWD_repsTitle"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>